<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>${package.environment}-bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>${project.name}</baseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <directory>src/main/resources</directory>
            <includes>
                <include>application.yml</include>
                <include>application-${package.environment}.yml</include>
                <include>log4j2-${package.environment}.xml</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <directory>src/main/resources</directory>
            <filtered>true</filtered>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <directoryMode>0755</directoryMode>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <outputDirectory>/lib</outputDirectory>
            <source>${project.build.directory}/${project.artifactId}-${package.environment}.jar</source>
            <destName>${project.artifactId}-${package.environment}.jar</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>${artifact.groupId}:${artifact.artifactId}</exclude>
            </excludes>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
</assembly>